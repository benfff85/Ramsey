<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>project</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/cfg</directory>
			<outputDirectory>./Ramsey/cfg</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>./Ramsey/resources</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/max</directory>
			<outputDirectory>./Ramsey/max</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/</directory>
			<outputDirectory>./Ramsey/lib</outputDirectory>
			<includes>
				<include>ramsey*.jar</include>
			</includes>
			<excludes>
				<exclude>*original*</exclude>
				<exclude>*shaded*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>